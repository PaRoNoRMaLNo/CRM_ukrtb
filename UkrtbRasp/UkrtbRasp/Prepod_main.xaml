<?xml version="1.0" encoding="UTF-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="UkrtbRasp.Prepod_main"
            xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
            xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
            android:TabbedPage.ToolbarPlacement="Bottom"
            Title="Расписание"
            UnselectedTabColor="{DynamicResource Secondary_dark}"
            BarBackgroundColor="{DynamicResource Primary}"
            SelectedTabColor="{DynamicResource Secondary}">
    <TabbedPage.Resources>
        <Style TargetType="Label">
            <Setter Property="TextColor"
                    Value="{DynamicResource Text_light}" />
            <Setter Property="FontFamily"
                    Value="Montserrat.ttf" />
            <!--<Setter Property="FontSize"
                    Value="Body" />-->
        </Style>
    </TabbedPage.Resources>
    <ContentPage BackgroundColor="{DynamicResource Primary}"
                 x:Name="Prepod_rasp"
                 Title="Расписание">
        <ContentPage.IconImageSource>
            <OnPlatform x:TypeArguments="FileImageSource"
                        iOS="rasp_ios"
                        Android="calen" />
        </ContentPage.IconImageSource>
        <StackLayout Margin="20,0">
            <Label Text="Расписание занятий"
                   FontSize="Medium"
                   FontFamily="Montserrat_SemiBold.ttf"
                   Margin="20"
                   HorizontalOptions="Center"
                   TextColor="{DynamicResource Text_light}" />
            <StackLayout>
                <yummy:PancakeView BackgroundColor="{DynamicResource Secondary}"
                                   CornerRadius="30,30,0,0"
                                   x:Name="Prepod_pankake"
                                   HeightRequest="80">
                    <yummy:PancakeView.GestureRecognizers>
                        <TapGestureRecognizer x:Name="Prep_tap"
                                              Tapped="Prep_tap_Tapped" />
                    </yummy:PancakeView.GestureRecognizers>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Преподаватели"
                               FontSize="Medium"
                               TextColor="{DynamicResource Text_light}"
                               FontFamily="Montserrat.ttf"
                               Margin="20,15" />
                        <Image Source="prepods.png"
                               VerticalOptions="Start"
                               HeightRequest="35"
                               HorizontalOptions="EndAndExpand"
                               Margin="20,10"/>
                    </StackLayout>

                </yummy:PancakeView>
                <yummy:PancakeView BackgroundColor="{DynamicResource Secondary_dark}"
                                   CornerRadius="30,30,0,0"
                                   x:Name="Group_pankake"
                                   HeightRequest="80"
                                   Margin="0,-35,0,0">
                    <yummy:PancakeView.GestureRecognizers>
                        <TapGestureRecognizer x:Name="Group_tap"
                                              Tapped="Group_tap_Tapped" />
                    </yummy:PancakeView.GestureRecognizers>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Группы"
                               FontSize="Medium"
                               TextColor="{DynamicResource Text_light}"
                               FontFamily="Montserrat.ttf"
                               Margin="20,15" />
                        <Image Source="groups.png"
                               VerticalOptions="Start"
                               HorizontalOptions="EndAndExpand"
                               HeightRequest="35"
                               Margin="20,10" />
                    </StackLayout>

                </yummy:PancakeView>
                <yummy:PancakeView BackgroundColor="{DynamicResource Primary_light}"
                                   CornerRadius="30"
                                   x:Name="Cab_pankake"
                                   Margin="0,-35,0,0">
                    <yummy:PancakeView.GestureRecognizers>
                        <TapGestureRecognizer x:Name="Cab_tap"
                                              Tapped="Cab_tap_Tapped" />
                    </yummy:PancakeView.GestureRecognizers>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Кабинеты"
                               FontSize="Medium"
                               TextColor="{DynamicResource Text_light}"
                               FontFamily="Montserrat.ttf"
                               Margin="20,15" />
                        <Image Source="cabs.png"
                               VerticalOptions="Start"
                               HeightRequest="35"
                               HorizontalOptions="EndAndExpand"
                               Margin="20,10" />
                    </StackLayout>

                </yummy:PancakeView>
            </StackLayout>
            <DatePicker x:Name="Date_hide"
                        Format="dd-MM-yyyy"
                        TextColor="White"
                        IsVisible="false" />
            <StackLayout Orientation="Horizontal"
                         Margin="0,10"
                         VerticalOptions="Start">
                <Button Text="10.08"
                        x:Name="Select_date_today"
                        Clicked="Select_date_today_Clicked"
                        FontFamily="Montserrat.ttf"
                        BackgroundColor="{DynamicResource Secondary_dark}"
                        TextColor="{DynamicResource Text_light}" />
                <Button Text="11.08"
                        Clicked="Select_date_today_Clicked"
                        x:Name="Select_date_tomorow"
                        FontFamily="Montserrat.ttf"
                        BackgroundColor="{DynamicResource Primary_light}"
                        TextColor="{DynamicResource Text_light}" />
                <Button Text="12.08"
                        Clicked="Select_date_today_Clicked"
                        FontFamily="Montserrat.ttf"
                        x:Name="Select_date_plustwo"
                        BackgroundColor="{DynamicResource Primary_light}"
                        TextColor="{DynamicResource Text_light}" />
                <ImageButton BackgroundColor="{DynamicResource Primary_light}"
                             Source="calen"
                             HeightRequest="40"
                             Clicked="Open_select_date_Clicked"
                             x:Name="Open_select_date"
                             HorizontalOptions="FillAndExpand"
                             Padding="5" />
            </StackLayout>
            <yummy:PancakeView BackgroundColor="{DynamicResource Primary_light}"
                               CornerRadius="4">
                <Picker TextColor="{DynamicResource Text_light}"
                        Margin="10,0"
                        x:Name="Prepod_or_group_picker"
                        FontFamily="Montserrat.ttf"
                        SelectedIndex="0">
                    <Picker.Items>
                        <x:String>sdfsfdf</x:String>
                        <x:String>asaa</x:String>
                        <x:String>vvvvvvv</x:String>
                    </Picker.Items>
                </Picker>
            </yummy:PancakeView>
            <ScrollView Margin="0,10">
                <StackLayout>
                    <yummy:PancakeView BackgroundColor="{DynamicResource Primary_light}"
                                       CornerRadius="4"
                                       Padding="0,10">
                        <yummy:PancakeView.BackgroundGradientStops>
                            <yummy:GradientStopCollection>
                                <yummy:GradientStop Color="#242529"
                                                    Offset="0" />
                                <yummy:GradientStop Color="#121212"
                                                    Offset="1" />
                            </yummy:GradientStopCollection>
                        </yummy:PancakeView.BackgroundGradientStops>
                        <StackLayout>
                            <StackLayout Orientation="Horizontal">
                                <yummy:PancakeView BackgroundColor="{DynamicResource Secondary_dark}"
                                                   CornerRadius="0,15,0,15"
                                                   HorizontalOptions="Start"
                                                   VerticalOptions="Start"
                                                   Margin="0"
                                                   Padding="20,5">
                                    <Label Text="1"
                                           FontFamily="Montserrat_SemiBold.ttf"
                                           TextColor="{DynamicResource Text_light}" />
                                </yummy:PancakeView>
                                <Label Text="303"
                                       TextColor="{DynamicResource Text_light}"
                                       VerticalOptions="CenterAndExpand"
                                       Margin="10,0"
                                       FontFamily="Montserrat_SemiBold.ttf"
                                       HorizontalOptions="EndAndExpand" />
                                <!--<yummy:PancakeView
                                                                        BackgroundColor="{DynamicResource Secondary_dark}"
                                                                        CornerRadius="15,0,15,0"
                                                                        HorizontalOptions="EndAndExpand"
                                                                        VerticalOptions="Start"
                                                                        Margin="0,10,0,10"
                                                                        Padding="20,5">
                                                                        <Label
                                                                                Text="14:00"
                                                                                TextColor="{DynamicResource Text_light}" />
                                                                </yummy:PancakeView>-->
                            </StackLayout>
                            <Label Text="МДК. Разработка программных модулей"
                                   FontFamily="Montserrat.ttf"
                                   TextColor="{DynamicResource Text_light}"
                                   Margin="10,0" />
                            <Label Text="9ИСП-33-18"
                                   FontFamily="Montserrat.ttf"
                                   TextColor="{DynamicResource Text_dark}"
                                   Margin="10,0" />
                        </StackLayout>
                    </yummy:PancakeView>

                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage>

    <ContentPage BackgroundColor="{DynamicResource Primary}"
                 Appearing="ContentPage_Appearing"
                 Title="Заявка">
        <ContentPage.IconImageSource>
            <OnPlatform x:TypeArguments="FileImageSource"
                        iOS="demand_ios"
                        Android ="demond"/>
        </ContentPage.IconImageSource>
        <StackLayout>
            <Label Text="Заявка для ВЦ"
                   HorizontalOptions="Center"
                   TextColor="{DynamicResource Text_light}"
                   FontSize="Medium"
                   Margin="20"
                   FontFamily="Montserrat_SemiBold.ttf" />
            <yummy:PancakeView CornerRadius="4"
                               BackgroundColor="{DynamicResource Primary_light}"
                               Margin="20"
                               Padding="10">
                <StackLayout>
                    <Label FontFamily="Montserrat.ttf"
                           TextColor="{DynamicResource Text_light}"
                           Text="ФИО" />
                    <Editor Text=""
                            x:Name="Demand_fio"
                            TextColor="{DynamicResource Text_light}" />
                    <Label FontFamily="Montserrat.ttf"
                           TextColor="{DynamicResource Text_light}"
                           Text="Кабинет" />
                    <Picker TextColor="{DynamicResource Text_light}"
                            x:Name="Demand_cab">
                    </Picker>
                    <Label FontFamily="Montserrat.ttf"
                           TextColor="{DynamicResource Text_light}"
                           Text="Что нужно сделать" />
                    <Editor VerticalOptions="EndAndExpand"
                            Text=""
                            x:Name="Demand_text"
                            HeightRequest="150"
                            TextColor="{DynamicResource Text_light}" />
                    <Label x:Name="Error_text"
                           TextColor="Red" />
                    <Button Text="Отправить"
                            x:Name="Demand_send"
                            Clicked="Demand_send_Clicked"
                            FontFamily="Montserrat_SemiBold.ttf"
                            TextColor="{DynamicResource Text_light}"
                            BackgroundColor="{DynamicResource Secondary}" />
                </StackLayout>
            </yummy:PancakeView>
        </StackLayout>
    </ContentPage>
