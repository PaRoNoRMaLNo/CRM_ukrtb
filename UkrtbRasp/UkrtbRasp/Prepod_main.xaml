                Margin="20"
                FontFamily="Montserrat_SemiBold.ttf" />
            <yummy:PancakeView
                CornerRadius="4"
                BackgroundColor="{DynamicResource Primary_light}"
                Margin="20"
                Padding="10">
                <StackLayout>
                    <Label
                        FontFamily="Montserrat.ttf"
                        TextColor="{DynamicResource Text_light}"
                        Text="ФИО" />
                    <Editor
                        Text=""
                        BackgroundColor="{DynamicResource Primary_light}"
                        x:Name="Demand_fio"
                        TextColor="{DynamicResource Text_light}" />
                    <Label
                        FontFamily="Montserrat.ttf"
                        TextColor="{DynamicResource Text_light}"
                        Text="Кабинет" />
                    <Picker
                        TextColor="{DynamicResource Text_light}"
                        BackgroundColor="{DynamicResource Primary_light}"
                        x:Name="Demand_cab">
                    </Picker>
                    <Label
                        FontFamily="Montserrat.ttf"
                        TextColor="{DynamicResource Text_light}"
                        Text="Что нужно сделать" />
                    <Editor
                        VerticalOptions="EndAndExpand"
                        Text=""
                        BackgroundColor="{DynamicResource Primary_light}"
                        x:Name="Demand_text"
                        HeightRequest="150"
                        TextColor="{DynamicResource Text_light}" />
                    <Label
                        x:Name="Error_text"
                        TextColor="Red" />
                    <Button
                        Text="Отправить"
                        x:Name="Demand_send"
                        Clicked="Demand_send_Clicked"
                        FontFamily="Montserrat_SemiBold.ttf"
                        TextColor="{DynamicResource Text_light}"
                        BackgroundColor="{DynamicResource Secondary}" />
                </StackLayout>
            </yummy:PancakeView>
        </StackLayout>
    </ContentPage>
