                Android="ball" />
        </ContentPage.IconImageSource>
        <ContentPage.Padding>
            <OnPlatform
                x:TypeArguments="Thickness"
                iOS="0,30,0,0"
                Android="0" />
        </ContentPage.Padding>
        <ContentPage.Content>
            <ScrollView>
                <StackLayout VerticalOptions="StartAndExpand"
                         Margin="15">
                    <Label
                    FontFamily="Montserrat_SemiBold.ttf"
                    TextColor="{DynamicResource Text_light}"
                    FontSize="Large"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Start"
                    
                    Text="Подтвердить доступ"
                    Margin="0,20"/>
                    <Label
                    FontFamily="Montserrat.ttf"
                    TextColor="{DynamicResource Text_light}"
                    FontSize="Body"
                    HorizontalTextAlignment="Start"
                    
                    Text="Для допуска к учебным материалам необходимо подтверждение своего аккаунта."
                    Margin="0"/>
                    <Label
                    FontFamily="Montserrat.ttf"
                    TextColor="{DynamicResource Text_light}"
                    FontSize="Body"
                    HorizontalTextAlignment="Start"
                    Text="На этой странице вы можете это сделать при помощи сканирования QR-кода. Для этого авторизуйтесь на сайте и зайдите в свой профиль."
                    Margin="0"/>
                    <Label
                    FontFamily="Montserrat.ttf"
                    TextColor="{DynamicResource Text_light}"
                    FontSize="Body"
                    HorizontalTextAlignment="Start"
                    Text="Нажмите на кнопку сканирования и отсканируйте QR-код на сайте, после этого перезайдите в свой аккаунт на сайте заново."
                    Margin="0"/>
                    <Label
                    FontFamily="Montserrat.ttf"
                    TextColor="{DynamicResource Text_light}"
                    FontSize="Body"
                    HorizontalTextAlignment="Start"
                    Text="В случае если доступ не появился необходимо перезайти в аккаунт или почистить кэш-браузера."
                    Margin="0"/>
                    <Button
                    x:Name="QR_Btn"
                    Clicked="QR_Btn_Clicked"
                    Margin="0,20"
                    Text="Cканировать"
                    FontFamily="Montserrat_SemiBold.ttf"
                        TextColor="{DynamicResource Text_light}"
                        BackgroundColor="{DynamicResource Secondary}"/>

                </StackLayout>
            </ScrollView>
